<div class="container mt-5" style="background-color: #4CAF50; padding: 20px; border-radius: 10px;">
  <div class="row">
    <div class="row mt-3">
  <div class="col-md-12">
    <form action="/admin/remover-nao-confirmados" method="POST">
      <button type="submit" class="btn btn-danger">Remover Não Confirmados</button>
    </form>
  </div>
</div>
    <div class="col-md-12">
     <form action="/admin/exportar-admins" method="GET" class="form-inline mb-3">
  <div class="form-group">
    <label for="datacriacao" class="text-white" style="margin-right: 10px;">Exportar Por Data de Criação:</label>
    <input type="text" class="form-control" id="datacriacao" name="datacriacao" placeholder="dd/mm/aaaa" style="width: 100px;">
  </div>
  <button type="submit" class="btn btn-success" style="background-color: darkgreen;">Exportar para Excel</button>
</form>
    </div>
  </div>
  {{#if admins.length}}
    <div class="row">
      {{#each admins}}
        <div class="col-md-4 mb-4">
          <div class="card bg-light">
            <div class="card-body">
              <h4 class="card-title text-success">Email: {{email}}</h4>
              <p class="card-text">Data de nascimento: {{nascimento}}</p>
              <p class="card-text">permissão: {{permitions}}</p>
              <p class="card-text">Pontos: {{pontuacao}}</p>
              <form action="/admin/homeadm/delete" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar</button>
  </form>
  <form action="/admin/tornar-admin" method="POST">
    <input type="hidden" name="id" value="{{_id}}">
    <button type="submit" class="btn btn-primary mt-2">Tornar Admin</button>
              </form>
                <form action="/admin/remover-admin" method="POST">
    <input type="hidden" name="id" value="{{_id}}">
    <button type="submit" class="btn btn-danger mt-2">Remover Admin</button>
              </form>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="row">
      <div class="col-md-12">
        <h4 class="text-white">Nenhum usuário registrado</h4>
      </div>
    </div>
  {{/if}}
</div>
